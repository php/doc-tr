<refentry xml:id="function.key" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>key</refname>
  <refpurpose>Bir diziden gösterici konumundaki anahtarı döndürür</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>mixed</type><methodname>key</methodname>
   <methodparam><type>array</type><parameter role="reference">dizi</parameter></methodparam>
  </methodsynopsis>
  <para>
   <function>key</function> işlevi belirtilen diziden göstericinin işaret
   ettiği elemanın anahtarını döndürür.
  </para>
 </refsect1>
 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>dizi</parameter></term>
     <listitem>
      <para>
       Anahtarın alınacağı dizi.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Anahtarı döndürür.
  </para>
 </refsect1>
 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>- <function>key</function> örneği</title>
    <programlisting role="php">
<![CDATA[
<?php
$dizi = array(
    'meyve1' => 'elma',
    'meyve2' => 'muz',
    'meyve3' => 'armut',
    'meyve4' => 'elma',
    'meyve5' => 'elma');

// Değeri "elma" olan tüm anahtarları gösterir
while ($meyve_adı = current($dizi)) {
    if ($meyve_adı == 'elma') {
        echo key($dizi).'<br />';
    }
    next($dizi);
}
?>
]]>
    </programlisting>
    &example.outputs;
    <screen>
<![CDATA[
meyve1<br />
meyve4<br />
meyve5<br />
]]>
    </screen>
   </example>
  </para>
 </refsect1>
 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>current</function></member>
    <member><function>next</function></member>
   </simplelist>
  </para>
 </refsect1>
</refentry>

