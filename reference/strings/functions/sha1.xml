 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>- <function>sha1</function> örneği</title>
    <programlisting role="php">
<![CDATA[
<?php
$str = 'apple';

if (sha1($str) === 'd0be2dc421be4fcd0172e5afceea3970e2f3d940') {
    echo "Yeşil elma mı yoksa kırmızı elma mı isterseniz?";
    exit;
}
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

