<refentry xmlns:xlink="http://www.w3.org/1999/xlink" xmlns="http://docbook.org/ns/docbook" xml:id="function.ord">
 <refnamediv>
  <refname>ord</refname>
  <refpurpose>Karakterin ASCII değerini döndürür</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>int</type><methodname>ord</methodname>
   <methodparam><type>string</type><parameter>dizge</parameter></methodparam>
  </methodsynopsis>
  <para>
   <parameter>dizge</parameter> dizgesinin ilk karakterinin ASCII değerini
   döndürür.
  </para>
  <para>
   Bu işlev <function>chr</function> işlevinin tersidir.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>dizge</parameter></term>
     <listitem>
      <para>
       Bir karakter.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   ASCII değeri bir tamsayı olarak döndürür.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>- <function>ord</function> örneği</title>
    <programlisting role="php">
<![CDATA[
<?php
$str = "\n";
if (ord($str) == 10) {
    echo "\$str dizgesinin ilk karakteri bir satırsonudur.\n";
}
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>chr</function></member>
    <member><link xlink:href="&url.asciitable;">ASCII tablosu</link></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

