  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>- <function>substr_count</function> örneği</title>
    <programlisting role="php">
<![CDATA[
<?php
$text = 'This is a test';
echo strlen($text); // 14

echo substr_count($text, 'is'); // 2

// Arama 's is a test' parçasında yapılır ve 1 basılır
echo substr_count($text, 'is', 3);

// Arama 's i' parçasında yapılır ve 0 basılır
echo substr_count($text, 'is', 3, 3);

// 5+10 > 14 olduğundan bir uyarı verilir
echo substr_count($text, 'is', 5, 10);


// üst üste binen dizgeleri saymadığından sadece 1 basılır
$text2 = 'gcdgcdgcd';
echo substr_count($text2, 'gcdgcd');
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

