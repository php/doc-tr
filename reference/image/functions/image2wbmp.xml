<refentry xml:id="function.image2wbmp" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>image2wbmp</refname>
  <refpurpose>&gd.image.output;</refpurpose>
 </refnamediv>

 <refsynopsisdiv>
  &warn.deprecated.function-7-3-0.removed-8-0-0;
 </refsynopsisdiv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>image2wbmp</methodname>
   <methodparam><type>resource</type><parameter>görüntü</parameter></methodparam>
   <methodparam choice="opt"><type>string</type><parameter>dosyaismi</parameter></methodparam>
   <methodparam choice="opt"><type>int</type><parameter>önalan</parameter></methodparam>
  </methodsynopsis>
  <para>
   <function>image2wbmp</function> işlevi belirtilen görüntünün
   <acronym>WBMP</acronym> sürümünü tarayıcıya veya belirtilmişse
   <parameter>dosyaismi</parameter> dosyasına çıktılar.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    &gd.image.description;
    <varlistentry>
     <term><parameter>dosyaismi</parameter></term>
     <listitem>
      <para>
       Görüntünün kaydedileceği dosyanın yolu. Verilmezse ham görüntü akımı
       doğrudan tarayıcıya gönderilir.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>önalan</parameter></term>
     <listitem>
      <para>
       <function>imagecolorallocate</function> işlevinden elde edilen bir
       tanıtıcıyı atayarak bu değiştirge ile önalan rengini atayabilirsiniz.
       Öntanımlı önalan rengi siyahtır.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.success;
  </para>
  &gd.return.trueonerror;
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>- <function>image2wbmp</function> örneği</title>
    <programlisting role="php">
<![CDATA[
<?php
$file = 'php.png';
$image = imagecreatefrompng($file);

header('Content-Type: ' . image_type_to_mime_type(IMAGETYPE_WBMP));
image2wbmp($image); // doğrudan akımı çıktılıyoruz
imagedestroy($image);
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <simplelist>
   <member><function>imagewbmp</function></member>
  </simplelist>
 </refsect1>
</refentry>

