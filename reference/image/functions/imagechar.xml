<refentry xml:id="function.imagechar" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>imagechar</refname>
  <refpurpose>Yatay olarak bir karakter çizer</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>imagechar</methodname>
   <methodparam><type>resource</type><parameter>resim</parameter></methodparam>
   <methodparam><type>int</type><parameter>yazıtipi</parameter></methodparam>
   <methodparam><type>int</type><parameter>x</parameter></methodparam>
   <methodparam><type>int</type><parameter>y</parameter></methodparam>
   <methodparam><type>string</type><parameter>karakter</parameter></methodparam>
   <methodparam><type>int</type><parameter>renk</parameter></methodparam>
  </methodsynopsis>
  <para>
   <function>imagechar</function> işlevi <parameter>karakter</parameter>
   dizgesinin ilk karakterini <parameter>resim</parameter> ile belirtilen
   resmin üst sol <parameter>x</parameter>,<parameter>y</parameter> konumuna
   (resmin üst sol köşesi 0,0'dır) <parameter>renk</parameter> renginde çizer.
  </para>
 </refsect1>
 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    &gd.image.description;
    &gd.font.description;
    <varlistentry>
     <term><parameter>x</parameter></term>
     <listitem>
      <para>
       Başlangıç X koordinatı.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>y</parameter></term>
     <listitem>
      <para>
       Başlangıç Y koordinatı.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>karakter</parameter></term>
     <listitem>
      <para>
       Çizilecek karakter.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>renk</parameter></term>
     <listitem>
      <para>
       <function>imagecolorallocate</function> ile oluşturulmuş bir rengin
       tanıtıcısı.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.success;
  </para>
 </refsect1>
 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>- <function>imagechar</function> örneği</title>
    <programlisting role="php">
<![CDATA[
<?php

$im = imagecreate(100, 100);

$dizge = 'PHP';

$artalan = imagecolorallocate($im, 255, 255, 255);
$siyah = imagecolorallocate($im, 0, 0, 0);

// Üst sol köşeye siyah bir "P" basalım
imagechar($im, 1, 0, 0, $dizge, $siyah);

header('Content-type: image/png');
imagepng($im);

?>
]]>
    </programlisting>
    &example.outputs.similar;
    <mediaobject>
     <imageobject>
      <imagedata fileref="en/reference/image/figures/imagechar.png"/>
     </imageobject>
    </mediaobject>
   </example>
  </para>
 </refsect1>
 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>imagecharup</function></member>
    <member><function>imageloadfont</function></member>
   </simplelist>
  </para>
 </refsect1>
</refentry>

