<phpdoc:classref xmlns:phpdoc="http://php.net/ns/phpdoc" xml:id="class.tidynode" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xi="http://www.w3.org/2001/XInclude">
 <title><classname>TidyNode</classname> sınıfı</title>
 <titleabbrev>TidyNode</titleabbrev>

 <partintro>

<!-- {{{ TidyNode intro -->
  <section xml:id="tidynode.intro">
   &reftitle.intro;
   <para>
    Tidy tarafından saptandığı haliyle bir HTML dosyasındaki bir HTML düğümü.
   </para>
  </section>
<!-- }}} -->

  <section xml:id="tidynode.synopsis">
   &reftitle.classsynopsis;

<!-- {{{ Synopsis -->
   <classsynopsis>
    <ooclass><classname>TidyNode</classname></ooclass>

<!-- {{{ Class synopsis -->
    <classsynopsisinfo>
     <ooclass>
      <classname>TidyNode</classname>
     </ooclass>
    </classsynopsisinfo>
<!-- }}} -->
    <classsynopsisinfo role="comment">Özellikler</classsynopsisinfo>


    <classsynopsisinfo role="comment">Yöntemler</classsynopsisinfo>
    <xi:include xpointer="xmlns(db=http://docbook.org/ns/docbook) xpointer(id('class.tidynode')/db:refentry/db:refsect1[@role='description']/descendant::db:methodsynopsis[1])" />

   </classsynopsis>
<!-- }}} -->

  </section>

<!-- {{{ TidyNode properties -->
  <section xml:id="tidynode.props">
   &reftitle.properties;
   <variablelist>
    <varlistentry xml:id="tidynode.props.value">
     <term><varname>value</varname></term>
     <listitem>
      <para>Çevreleyen etiketler dahil, düğümün HTML gösterimi.</para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="tidynode.props.name">
     <term><varname>name</varname></term>
     <listitem>
      <para>HTML düğümünün ismi</para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="tidynode.props.type">
     <term><varname>type</varname></term>
     <listitem>
      <para>Etiketin türü (<constant>TIDY_NODETYPE_PHP</constant>gibi bir
      sabit)</para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="tidynode.props.line">
     <term><varname>line</varname></term>
     <listitem>
      <para>Dosyada etiketin bulunduğu satırın numarası.</para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="tidynode.props.column">
     <term><varname>column</varname></term>
     <listitem>
      <para>Dosyada etiketin bulunduğu sütunun numarası.</para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="tidynode.props.proprietary">
     <term><varname>proprietary</varname></term>
     <listitem>
      <para>Müseccel bir etiket olup olmadığını belirler</para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="tidynode.props.id">
     <term><varname>id</varname></term>
     <listitem>
      <para>Etiketin ID'si (<constant>TIDY_TAG_FRAME</constant> gibi bir
      sabit)</para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="tidynode.props.attribute">
     <term><varname>attribute</varname></term>
     <listitem>
      <para>
       Geçerli düğümün öznitelik isimlerini anahtar olarak içeren bir dizge
       dizisi.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="tidynode.props.child">
     <term><varname>child</varname></term>
     <listitem>
      <para>
       Geçerli düğümün çocuklarından oluşan bir
       <classname>TidyNode</classname> dizisi.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>

  <para>
   <informaltable>
    <tgroup cols="2">
     <thead>
      <row>
       <entry>&Version;</entry>
       <entry>&Description;</entry>
      </row>
     </thead>
     <tbody>
      <row>
       <entry>5.1.0</entry>
       <entry><varname>line</varname>, <varname>column</varname>
       ve <varname>proprietary</varname> eklendi.</entry>
      </row>
     </tbody>
    </tgroup>
   </informaltable>
  </para>

 </section>
<!-- }}} -->
 </partintro>

 &reference.tidy.entities.tidynode;

</phpdoc:classref>

