<refentry xml:id="function.bcadd" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>bcadd</refname>
  <refpurpose>İki keyfi duyarlıklı sayıyı toplar</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>bcadd</methodname>
   <methodparam><type>string</type><parameter>sol_terim</parameter></methodparam>
   <methodparam><type>string</type><parameter>sag_terim</parameter></methodparam>
   <methodparam choice="opt"><type>int</type><parameter>olcek</parameter></methodparam>
  </methodsynopsis>
  <para>
   <parameter>sol_terim</parameter> ile <parameter>sag_terim</parameter>
   toplamını alır.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>sol_terim</parameter></term>
     <listitem>
      <para>
       Dizge olarak sol terim.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>sag_terim</parameter></term>
     <listitem>
      <para>
       Dizge olarak sağ terim.
      </para>
     </listitem>
    </varlistentry>
    &bc.scale.description;
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   İki terimin toplamını dizge olarak verir.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title><function>bcadd</function> örneği</title>
   <programlisting role="php">
<![CDATA[
<?php

$a = '1.234';
$b = '5';

echo bcadd($a, $b);     // 6
echo bcadd($a, $b, 4);  // 6.2340

?>
]]>
   </programlisting>
  </example>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>bcsub</function></member>
   </simplelist>
  </para>
 </refsect1>
</refentry>

