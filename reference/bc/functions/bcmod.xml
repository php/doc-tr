<refentry xml:id="function.bcmod" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>bcmod</refname>
  <refpurpose>Keyfi duyarlıklı sayılarda bölme işleminden kalanı bulur
  </refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>bcmod</methodname>
   <methodparam><type>string</type><parameter>sol_terim</parameter></methodparam>
   <methodparam><type>string</type><parameter>modul</parameter></methodparam>
  </methodsynopsis>
  <para>
   <parameter>sol_terim</parameter>&apos;in
   <parameter>modul</parameter>&apos;e bölünmesinden kalanı bulur
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>sol_terim</parameter></term>
     <listitem>
      <para>
       Dizge olarak sol terim.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>modul</parameter></term>
     <listitem>
      <para>
       Dizge olarak modül.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Dizge olarak kalanı veya <parameter>modul</parameter> 0 ise
   &null; döndürür.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <example>
   <title><function>bcmod</function> örneği</title>
   <programlisting role="php">
<![CDATA[
<?php
echo bcmod('4', '2'); // 0
echo bcmod('2', '4'); // 2
?>
]]>
   </programlisting>
  </example>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>bcdiv</function></member>
   </simplelist>
  </para>
 </refsect1>
</refentry>

