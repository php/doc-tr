<refentry xml:id='function.curl-error' xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>curl_error</refname>
  <refpurpose>Belirtilen oturumdaki son hatayı içeren bir dizge döndürür
  </refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>curl_error</methodname>
   <methodparam><type>resource</type><parameter>ct</parameter></methodparam>
  </methodsynopsis>
  <para>
   Belirtilen oturumdaki son hataya ilişkin bir dizge döndürür.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    &curl.ch.description;
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Bir hata yoksa boş bir dizge, bir hata varsa hata
   dizgesini döndürür.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>- <function>curl_error</function> örneği</title>
    <programlisting role="php">
<![CDATA[
<?php
// Olmayan bir yer için bir cURL tanıtıcısı oluşturalım
$ct = curl_init('http://404.php.net/');
curl_setopt($ct, CURLOPT_RETURNTRANSFER, true);

if(curl_exec($ct) === false)
{
    echo 'Curl hatası: ' . curl_error($ct);
}
else
{
    echo 'İşlem hatasız tamamlandı';
}

// Tanıtıcıyı kapatalım
curl_close($ct);
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>curl_errno</function></member>
    <member><link xlink:href="&url.curl.error;">Curl hata kodları
    </link></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

