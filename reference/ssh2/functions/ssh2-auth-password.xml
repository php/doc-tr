<refentry xmlns="http://docbook.org/ns/docbook" xml:id="function.ssh2-auth-password">
 <refnamediv>
  <refname>ssh2_auth_password</refname>
  <refpurpose>Parola kullanarak kimlik doğrulaması yapar</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>ssh2_auth_password</methodname>
   <methodparam><type>resource</type><parameter>oturum</parameter></methodparam>
   <methodparam><type>string</type><parameter>kullanıcı</parameter></methodparam>
   <methodparam><type>string</type><parameter>parola</parameter></methodparam>
  </methodsynopsis>
  <para>
   Düz parola kullanarak SSN üzerinden kimlik doğrulaması yapar.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>oturum</parameter></term>
     <listitem>
      <para>
       <function>ssh2_connect</function> ile sağlanan bir SSH bağlantı
       tanıtıcısı.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>kullanıcı</parameter></term>
     <listitem>
      <para>
       Uzak konaktaki kullanıcı ismi.
      </para>
     </listitem>
    </varlistentry>
    <varlistentry>
     <term><parameter>parola</parameter></term>
     <listitem>
      <para>
       <parameter>kullanıcı</parameter> için parola.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.success;
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>- Parolalı kimlik doğrulama</title>
    <programlisting role="php">
<![CDATA[
<?php
$baglanti = ssh2_connect('shell.example.com', 22);

if (ssh2_auth_password($baglanti, 'birey', 'parola')) {
  echo "Kimlik Doğrulaması Başarılı!\n";
} else {
  die('Kimlik Doğrulaması Başarısız...');
}
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

</refentry>

