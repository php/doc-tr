 <refsect1 role="examples"><!-- {{{ -->
  &reftitle.examples;
  <para>
   <example>
    <title>- Bir akım sarmalayıcının etkin kılınması</title>
    <programlisting role="php">
<![CDATA[
<?php
$existed = in_array("var", stream_get_wrappers());
if ($existed) {
    stream_wrapper_unregister("var");
}
stream_wrapper_register("var", "VariableStream");
$myvar = "";

$fp = fopen("var://myvar", "r+");

fwrite($fp, "line1\n");
fwrite($fp, "line2\n");
fwrite($fp, "line3\n");

rewind($fp);
while (!feof($fp)) {
    echo fgets($fp);
}
fclose($fp);
var_dump($myvar);

if ($existed) {
    stream_wrapper_restore("var");
}

?>
]]>
    </programlisting>
    &example.outputs;
    <screen>
<![CDATA[
line1
line2
line3
string(18) "line1
line2
line3
"
]]>
    </screen>
   </example>
  </para>
 </refsect1><!-- }}} -->

