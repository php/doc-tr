<refentry xml:id='function.domelement-has-attribute' xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>DomElement::has_attribute</refname>
  <refpurpose>Elemanın, ismi belirtilen bir özniteliği var mı, diye bakar
  </refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>DomElement::has_attribute</methodname>
   <methodparam><type>string</type><parameter>isim</parameter></methodparam>
  </methodsynopsis>
  <para>
   <parameter>isim</parameter> ile belirtilen özniteliğin elemanda mevcut
   olup olmadığına bakar.
  </para>
 </refsect1>
 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>isim</parameter></term>
     <listitem>
      <para>
       Aranacak özniteliğin ismi.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>
 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Öznitelik varsa &true; yoksa  &false; döner.
  </para>
 </refsect1>
 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>- Bir özniteliğin varlığını sınamak</title>
    <programlisting role="php">
<![CDATA[
<?php

include("example.inc");

if (!$dom = domxml_open_mem($xmlstr)) {
    echo "Belge çözümlenirken hata oluştu\n";
    exit;
}

$root = $dom->document_element();

$buffer = '<html';
if ($root->has_attribute('language')) {
    $buffer .= 'lang="' . $root->get_attribute('language') . '"';
}
$buffer .= '>';

?>

]]>
    </programlisting>
   </example>
  </para>
 </refsect1>
 <refsect1 role="migration">
  <title>PHP 5&apos;e yükseltme</title>
  <para>
   <methodname>DOMElement::hasAttribute</methodname> yöntemini kullanın.
  </para>
 </refsect1>
</refentry>

