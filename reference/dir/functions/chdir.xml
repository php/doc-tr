<refentry xml:id="function.chdir" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>chdir</refname>
  <refpurpose>Dizin değiştirir</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>chdir</methodname>
   <methodparam><type>string</type><parameter>dizin</parameter></methodparam>
  </methodsynopsis>
  <para>
   PHP'nin geçerli dizinden belirtilen <parameter>dizin</parameter>'e
   geçmesini sağlar.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>dizin</parameter></term>
     <listitem>
      <para>
       Yeni geçerli dizin.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   &return.success;
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>- <function>chdir</function> örneği</title>
    <programlisting role="php">
<![CDATA[
<?php

// geçerli dizin
echo getcwd() . "\n";

// değiştirelim
chdir('public_html');

// geçerli dizin
echo getcwd() . "\n";

?>
]]>
    </programlisting>
    &example.outputs.similar;
    <screen>
<![CDATA[
/home/nilgun
/home/nilgun/public_html
]]>
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="notes">
  &reftitle.notes;
  &note.sm.uidcheck.dir;
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>getcwd</function></member>
   </simplelist>
  </para>
 </refsect1>
</refentry>

