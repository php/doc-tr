   </informaltable>
  </para>
 </refsect1>
 
 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Throwing an exception into a generator</title>
    <programlisting role="php">
<![CDATA[
<?php
function gen() {
    echo "Foo\n";
    try {
        yield;
    } catch (Exception $e) {
        echo "Exception: {$e->getMessage()}\n";
    }
    echo "Bar\n";
}
 
$gen = gen();
$gen->rewind();
$gen->throw(new Exception('Test'));
?>
]]>
    </programlisting>
    &example.outputs;
    <screen>
<![CDATA[
Foo
Exception: Test
Bar
]]>
    </screen>
   </example>
  </para>
 </refsect1>
</refentry>

